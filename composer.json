{
  "name": "nizerin/hyperf-im",
  "type": "project",
  "keywords": [
    "php",
    "swoole",
    "hyperf",
    "websocket",
    "im",
    "room chat"
  ],
  "description": "websocket service,room chat,im, base of Hyperf",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.2",
    "ext-swoole": ">=4.4",
    "hyperf/cache": "~2.0.0",
    "hyperf/command": "~2.0.0",
    "hyperf/config": "~2.0.0",
    "hyperf/db-connection": "~2.0.0",
    "hyperf/framework": "~2.0.0",
    "hyperf/guzzle": "~2.0.0",
    "hyperf/http-server": "~2.0.0",
    "hyperf/logger": "~2.0.0",
    "hyperf/memory": "~2.0.0",
    "hyperf/process": "~2.0.0",
    "hyperf/redis": "~2.0.0",
    "hyperf/constants": "~2.0.0",
    "hyperf/async-queue": "~2.0.0",
    "hyperf/model-cache": "~2.0.0",
    "hyperf/websocket-server": "~2.0.0",
    "ext-json": "*",
    "ext-redis": "*",
    "firebase/php-jwt": "^5.2",
    "hyperf/validation": "~2.0.0",
    "ramsey/uuid": "^4.0"
  },
  "require-dev": {
    "swoft/swoole-ide-helper": "^4.2",
    "phpmd/phpmd": "^2.6",
    "friendsofphp/php-cs-fixer": "^2.14",
    "mockery/mockery": "^1.0",
    "doctrine/common": "^2.9",
    "phpstan/phpstan": "^0.12",
    "hyperf/devtool": "~2.0.0",
    "hyperf/testing": "~2.0.0"
  },
  "suggest": {
    "ext-openssl": "Required to use HTTPS.",
    "ext-json": "Required to use JSON.",
    "ext-pdo": "Required to use MySQL Client.",
    "ext-pdo_mysql": "Required to use MySQL Client.",
    "ext-redis": "Required to use Redis Client."
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Src\\": "src/"
    },
    "files": [
      "file/helper.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "HyperfTest\\": "./test/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": [],
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "rm -rf runtime/container"
    ],
    "test": "co-phpunit -c phpunit.xml --colors=always",
    "cs-fix": "php-cs-fixer fix $1",
    "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
    "start": "php ./bin/hyperf.php start"
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer"
    }
  }
}
